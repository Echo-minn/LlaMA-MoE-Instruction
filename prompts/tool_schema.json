{
  "tools": [
    {
      "name": "list_files",
      "description": "List files in a directory path.",
      "arguments": {
        "type": "object",
        "properties": {
          "path": { "type": "string" }
        },
        "required": ["path"]
      }
    },
    {
      "name": "read_file",
      "description": "Read the contents of a text file.",
      "arguments": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "max_bytes": { "type": "integer", "minimum": 1 }
        },
        "required": ["path"]
      }
    },
    {
      "name": "write_file",
      "description": "Write text contents to a file (overwrites by default).",
      "arguments": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "content": { "type": "string" },
          "append": { "type": "boolean" }
        },
        "required": ["path", "content"]
      }
    },
    {
      "name": "execute_bash",
      "description": "Execute a safe shell command and return stdout/stderr.",
      "arguments": {
        "type": "object",
        "properties": {
          "command": { "type": "string" },
          "timeout_sec": { "type": "integer", "minimum": 1 }
        },
        "required": ["command"]
      }
    }
  ]
}

